{
	"name": "intex",
	"icon": "logo.png",
	"displayName": "∫TeX - Modern LaTeX Editor",
	"description": "∫TeX is a modern, local-first LaTeX extension for VS Code, offering fast builds, integrated PDF preview, SyncTeX, and smart tooling powered by texlab LSP server.",
	"version": "1.0.3",
	"publisher": "PolarHuskyDev",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/PolarHuskyDev/intex"
	},
	"bugs": {
		"url": "https://github.com/PolarHuskyDev/intex/issues"
	},
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"keywords": [
		"latex",
		"tex",
		"pdf",
		"typesetting",
		"academic"
	],
	"activationEvents": [
		"onLanguage:latex",
		"onLanguage:tex",
		"workspaceContains:**/*.tex"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "latex",
				"aliases": [
					"LaTeX",
					"latex"
				],
				"extensions": [
					".tex",
					".sty",
					".cls",
					".bbx",
					".cbx"
				],
				"configuration": "./language-configuration.json"
			},
			{
				"id": "bibtex",
				"aliases": [
					"BibTeX",
					"bibtex"
				],
				"extensions": [
					".bib"
				]
			}
		],
		"snippets": [
			{
				"language": "latex",
				"path": "./snippets/latex.json"
			}
		],
		"commands": [
			{
				"command": "intex.build",
				"title": "InTeX: Build LaTeX Document",
				"icon": "$(tools)"
			},
			{
				"command": "intex.clean",
				"title": "InTeX: Clean Auxiliary Files",
				"icon": "$(trash)"
			},
			{
				"command": "intex.cleanBuild",
				"title": "InTeX: Clean and Build",
				"icon": "$(refresh)"
			},
			{
				"command": "intex.viewPdf",
				"title": "InTeX: View PDF",
				"icon": "$(file-pdf)"
			},
			{
				"command": "intex.selectBuilder",
				"title": "InTeX: Select Build Method (Local/Docker)",
				"icon": "$(settings-gear)"
			},
			{
				"command": "intex.detectEnvironment",
				"title": "InTeX: Detect LaTeX Environment"
			},
			{
				"command": "intex.installTexlab",
				"title": "InTeX: Install/Update texlab LSP Server"
			},
			{
				"command": "intex.synctex.forwardSearch",
				"title": "InTeX: Forward Search (Go to PDF)",
				"icon": "$(arrow-right)"
			},
			{
				"command": "intex.newFromTemplate",
				"title": "InTeX: New Project from Template",
				"icon": "$(new-file)"
			},
			{
				"command": "intex.insertCitation",
				"title": "InTeX: Insert Citation",
				"icon": "$(references)"
			},
			{
				"command": "intex.editBibtexEntry",
				"title": "InTeX: Edit BibTeX Entry",
				"icon": "$(edit)"
			},
			{
				"command": "intex.findRootFile",
				"title": "InTeX: Find Root File"
			},
			{
				"command": "intex.analyzeProject",
				"title": "InTeX: Analyze Project Structure"
			},
			{
				"command": "intex.insertFigure",
				"title": "InTeX: Insert Figure",
				"icon": "$(file-media)"
			},
			{
				"command": "intex.previewFigure",
				"title": "InTeX: Preview Figure at Cursor"
			},
			{
				"command": "intex.showAllFigures",
				"title": "InTeX: Show All Figures"
			},
			{
				"command": "intex.toggleInlinePreviews",
				"title": "InTeX: Toggle Inline Figure Previews"
			},
			{
				"command": "intex.previewTikz",
				"title": "InTeX: Preview TikZ Code",
				"icon": "$(preview)"
			},
			{
				"command": "intex.compileTikzStandalone",
				"title": "InTeX: Compile TikZ as Standalone"
			},
			{
				"command": "intex.insertTikzTemplate",
				"title": "InTeX: Insert TikZ Template"
			},
			{
				"command": "intex.generatePlot",
				"title": "InTeX: Generate Plot with Wizard"
			},
			{
				"command": "intex.insertPgfplotsTemplate",
				"title": "InTeX: Insert Pgfplots Template"
			},
			{
				"command": "intex.openEquationEditor",
				"title": "InTeX: Open Equation Editor",
				"icon": "$(symbol-operator)"
			},
			{
				"command": "intex.insertMathSymbol",
				"title": "InTeX: Insert Math Symbol"
			},
			{
				"command": "intex.wrapInMath",
				"title": "InTeX: Wrap Selection in Math Mode"
			},
			{
				"command": "intex.openTableEditor",
				"title": "InTeX: Open Table Editor",
				"icon": "$(table)"
			},
			{
				"command": "intex.editTableAtCursor",
				"title": "InTeX: Edit Table at Cursor"
			},
			{
				"command": "intex.insertTableTemplate",
				"title": "InTeX: Insert Table Template"
			},
			{
				"command": "intex.createMacro",
				"title": "InTeX: Create Macro",
				"icon": "$(symbol-snippet)"
			},
			{
				"command": "intex.insertCommonMacros",
				"title": "InTeX: Insert Common Macros"
			},
			{
				"command": "intex.extractMacro",
				"title": "InTeX: Extract Selection to Macro"
			},
			{
				"command": "intex.clearBuildCache",
				"title": "InTeX: Clear Build Cache"
			},
			{
				"command": "intex.showCacheStats",
				"title": "InTeX: Show Cache Statistics"
			},
			{
				"command": "intex.toggleIncrementalBuild",
				"title": "InTeX: Toggle Incremental Build"
			},
			{
				"command": "intex.toggleInlineDecorations",
				"title": "InTeX: Toggle Inline Previews"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId == latex",
					"command": "intex.build",
					"group": "navigation@1"
				},
				{
					"when": "resourceLangId == latex",
					"command": "intex.viewPdf",
					"group": "navigation@2"
				}
			],
			"commandPalette": [
				{
					"command": "intex.build",
					"when": "resourceLangId == latex"
				},
				{
					"command": "intex.clean",
					"when": "resourceLangId == latex"
				},
				{
					"command": "intex.viewPdf",
					"when": "resourceLangId == latex"
				}
			]
		},
		"configuration": {
			"title": "InTeX",
			"properties": {
				"intex.buildMethod": {
					"type": "string",
					"enum": [
						"auto",
						"local",
						"docker"
					],
					"default": "auto",
					"description": "Build method to use: 'auto' detects available system, 'local' uses local TeX Live, 'docker' uses containerized build"
				},
				"intex.docker.image": {
					"type": "string",
					"default": "texlive/texlive:latest",
					"description": "Docker image to use for containerized builds"
				},
				"intex.docker.enableCache": {
					"type": "boolean",
					"default": true,
					"description": "Cache LaTeX packages in a Docker volume for faster builds"
				},
				"intex.buildOnSave": {
					"type": "boolean",
					"default": true,
					"description": "Automatically build LaTeX documents on save"
				},
				"intex.pdfViewer": {
					"type": "string",
					"enum": [
						"pdfjs",
						"native"
					],
					"default": "pdfjs",
					"enumDescriptions": [
						"Use PDF.js for full control (SyncTeX, custom UI)",
						"Use browser's native PDF viewer (simpler, less control)"
					],
					"description": "PDF viewer implementation to use"
				},
				"intex.buildEngine": {
					"type": "string",
					"enum": [
						"latexmk",
						"pdflatex",
						"xelatex",
						"lualatex"
					],
					"default": "latexmk",
					"description": "LaTeX engine to use for compilation"
				},
				"intex.latexmk.options": {
					"type": "array",
					"default": [
						"-pdf",
						"-interaction=nonstopmode",
						"-synctex=1",
						"-file-line-error"
					],
					"description": "Additional options to pass to latexmk"
				},
				"intex.outputDirectory": {
					"type": "string",
					"default": "out",
					"description": "Directory for build output (relative to workspace root)"
				},
				"intex.rootFile": {
					"type": "string",
					"default": "",
					"description": "Main LaTeX file for multi-file projects (e.g., 'main.tex'). Used for building included files and SyncTeX. Leave empty if working with single-file documents."
				},
				"intex.showOutputChannel": {
					"type": "string",
					"enum": [
						"never",
						"onError",
						"always"
					],
					"default": "onError",
					"description": "When to show the build output channel"
				},
				"intex.texlab.path": {
					"type": "string",
					"default": "",
					"description": "Custom path to texlab LSP server binary (leave empty for auto-detection)"
				},
				"intex.lsp.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable LaTeX language server (texlab) for auto-completion and navigation"
				},
				"intex.figureInlinePreviews": {
					"type": "boolean",
					"default": false,
					"description": "Show inline image previews next to \\includegraphics commands"
				},
				"intex.enableIncrementalBuild": {
					"type": "boolean",
					"default": true,
					"description": "Enable incremental compilation to speed up builds by only recompiling changed files"
				},
				"intex.experimental.enableTikZEditor": {
					"type": "boolean",
					"default": false,
					"description": "⚠️ EXPERIMENTAL: Enable the TikZ WYSIWYG visual editor (work in progress)"
				}
			}
		},
		"customEditors": [
			{
				"viewType": "intex.pdfPreview",
				"displayName": "InTeX PDF Preview",
				"selector": [
					{
						"filenamePattern": "*.pdf"
					}
				],
				"priority": "option"
			}
		],
		"keybindings": [
			{
				"command": "intex.synctex.forwardSearch",
				"key": "ctrl+alt+j",
				"mac": "cmd+alt+j",
				"when": "editorTextFocus && editorLangId == latex"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/adm-zip": "^0.5.7",
		"@types/node": "^20.19.30",
		"@types/vscode": "^1.85.0",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"@vscode/test-electron": "^2.3.8",
		"@vscode/vsce": "^3.7.1",
		"eslint": "^8.56.0",
		"ts-loader": "^9.5.1",
		"typescript": "^5.3.3",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"adm-zip": "^0.5.16",
		"html2canvas": "^1.4.1",
		"jimp": "^1.6.0",
		"vscode-languageclient": "^9.0.1"
	}
}